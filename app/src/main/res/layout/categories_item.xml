<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/categories_item_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/yellow"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/categories_thumb"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            tools:ignore="ContentDescription"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            style="@style/Theme.Foodie.text_14_medium"
            android:id="@+id/categories_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/categories" />

        <ImageView
            android:id="@+id/icon_dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_dropdown"
            app:tint="@color/white"
            android:rotation="270"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            tools:ignore="ContentDescription"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>